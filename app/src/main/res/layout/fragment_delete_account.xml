<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.More.DeleteAccountFragment"
    android:background="#010928">


    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="80dp"
        android:background="@drawable/border_shape2"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Your Account "
            android:textColor="@color/gold"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/border_shape2">

            <Button
                android:id="@+id/btn_deleteAccount_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="Delete"
                android:textColor="@color/red"
                android:textSize="20sp"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btn_deleteAccount_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="Cancel"
                android:textColor="#85FFFFFF"
                android:textSize="20sp"
                app:strokeColor="#A1FFFFFF"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>