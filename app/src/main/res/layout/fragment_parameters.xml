<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010928"
    tools:context=".fragments.More.ParametersFragment">

    <!-- Common Information Section -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fragmentParameters_commonInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="16dp"
            android:text="Common Information"
            android:textColor="@color/gold"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fragmentParameters_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Username"
                android:textColor="@color/gold"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_fragmentParameters_username"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fragmentParameters_emailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Email Address"
                android:textColor="@color/gold" />

            <EditText
                android:id="@+id/et_fragmentParameters_emailAddress"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fragmentParameters_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Birthdate"
                android:textColor="@color/gold" />

            <EditText
                android:id="@+id/et_fragmentParameters_birthdate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fragmentParameters_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Title"
                android:textColor="@color/gold" />

            <EditText
                android:id="@+id/et_fragmentParameters_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="165dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fragmentParameters_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Description"
                android:textColor="@color/gold" />

            <EditText
                android:id="@+id/et_fragmentParameters_description"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_fragmentParameters_editProfileCommonInformation"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#00FFFFFF"
            android:text="Apply Modifications"
            android:textColor="@color/gold"
            android:textColorHighlight="@color/gold"
            app:cornerRadius="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_fragmentOtherUserProfile_userDescription"
            app:strokeColor="@color/gold"
            app:strokeWidth="2dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:background="#deb992"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_fragmentParameters_personalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="16dp"
            android:text="Personal Information"
            android:textColor="@color/gold"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fragmentParameters_oldPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Old Password"
                android:textColor="@color/gold" />

            <EditText
                android:id="@+id/et_fragmentParameters_oldPassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="8dp"
                android:inputType="textPassword"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fragmentParameters_newPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="New Password"
                android:textColor="@color/gold" />

            <EditText
                android:id="@+id/et_fragmentParameters_newPassword"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="8dp"
                android:inputType="textPassword"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fragmentParameters_newPasswordConfirmation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="New Password"
                android:textColor="@color/gold" />

            <EditText
                android:id="@+id/et_fragmentParameters_newPasswordConfirmation"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="8dp"
                android:inputType="textPassword"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_fragmentParameters_editProfilePersonalInformation"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#00FFFFFF"
            android:text="Apply Modifications"
            android:textColor="@color/gold"
            android:textColorHighlight="@color/gold"
            app:cornerRadius="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_fragmentParameters_phoneNumber"
            app:strokeColor="@color/gold"
            app:strokeWidth="2dp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:background="#deb992"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textViewAccountPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="16dp"
            android:text="Account Privacy"
            android:textColor="@color/gold"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMakeAccountPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Make the account private globally"
                android:textColor="@color/gold" />

            <Switch
                android:id="@+id/switch_fragmentParameters_makeAccountPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="19dp"
                android:textColor="@color/gold"
                android:thumbTint="@color/gold"
                android:trackTint="@color/gold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescriptionMakeAccountPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:text="When your account is public, your profile and posts can be seen by anyone, whether they are friends with you or not. When your account is private, only the followers you've approved can see what you share, including your photos and videos on hashtag and location pages, as well as your followers and the accounts you follow."
            android:textColor="@color/gray"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMakeFriendsListPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Make friends list private"
                android:textColor="@color/gold" />

            <Switch
                android:id="@+id/switch_fragmentParameters_makeFriendsListPrivate"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="183dp"
                android:layout_marginTop="19dp"
                android:textColor="@color/gold"
                android:thumbTint="@color/gold"
                android:trackTint="@color/gold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescriptionMakeFriendsListPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:text="When this parameter is set to public, your friend list is visible to everyone, whether they are friends with you or not. When your account is private, only your friends can see your friend list."
            android:textColor="@color/gray"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMakePostsPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Make your posts private"
                android:textColor="@color/gold" />

            <Switch
                android:id="@+id/switch_fragmentParameters_makePostsPrivate"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="183dp"
                android:layout_marginTop="19dp"
                android:textColor="@color/gold"
                android:thumbTint="@color/gold"
                android:trackTint="@color/gold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescriptionMakePostsPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:text="When this parameter is set to public, your publications are visible to everyone, whether they are friends with you or not. When your account is private, only your friends can see your posts."
            android:textColor="@color/gray"
            android:textStyle="italic" />

        <View
            android:id="@+id/divider3"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:background="#deb992"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_fragmentParameters_deleteAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="16dp"
            android:text="Delete Account"
            android:textColor="@color/gold"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_fragmentParameters_deleteAccount"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#00FFFFFF"
            android:text="Delete Account"
            android:textColor="@color/red"
            android:textColorHighlight="@color/red"
            app:cornerRadius="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_fragmentParameters_deleteAccount"
            app:strokeColor="@color/red"
            app:strokeWidth="2dp" />

    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_fragmentParameters_deleteAccount"
        android:name="com.groupe5.moodmobile.fragments.More.DeleteAccountFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        android:autoHandwritingEnabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
