<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#010928"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.More.SideMenuFragment">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/border_shape2"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/btn_fragmentSideMenu_Parameters"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="Parameters"
            android:textColor="@color/gold"
            android:textSize="20sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#deb992" />

        <TextView
            android:id="@+id/btn_fragmentSideMenu_Notifications"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="2dp"
            android:text="Notifications"
            android:textColor="@color/gold"
            android:textSize="20sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#deb992" />

        <TextView
            android:id="@+id/btn_fragmentSideMenu_SignOut"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:text="Sign Out"
            android:textColor="@color/gold"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>